<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:startColor="#0643BD"
                android:centerColor="#8156FF"
                android:endColor="#79ADFA"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="#3F3181"
                android:centerColor="#754C9C"
                android:endColor="#9641B4"/>
        </shape>
    </item>
</selector>